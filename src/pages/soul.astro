---
import "../styles/global.css";
// Component Imports
import Layout from "@/layouts/Layout.astro";
import { getCurrentGrid, getLastPixelPlaced, getLeaderboard } from "@/lib/supabase";
import Panel from "@/components/react/Panel";
import Header from "@/components/Header.astro";

const user = await Astro.locals.currentUser();


if (!user || !user?.username) {
  return Astro.redirect("/");
}

const username = user?.username;
const { data, error } = await getCurrentGrid();
const { data: initialLeaderboard } = await getLeaderboard();
const { data: lastPixelPlaced } = await getLastPixelPlaced(username)
---

<Layout>
  <div class="min-h-screen bg-black text-purple-500 font-mono flex flex-col">
    <Header />

    <Panel 
      initialLeaderboard={initialLeaderboard ?? []}
      initialGrid={data}
      lastPixelPlaced={lastPixelPlaced[0] ?? null}
      client:load 
    />
  </div>
</Layout>
